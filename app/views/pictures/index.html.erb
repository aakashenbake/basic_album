<h1>Listing picture</h1>
<%= link_to 'Back', albums_path %>
<%= link_to 'New', new_album_picture_path %> 
<table border = "1">
  <tr>
    <th>name</th>
    <th>description</th>
    <th>image</th>
  </tr>
 <% @picture.each do |picture| %>
    <tr>
     <td><%= picture.name %></td>
      <td><%= picture.description %></td>
      <td><%= link_to image_tag(picture.image.url(:large)), picture.image.url %></td>
      <td><%= link_to 'Show', album_picture_path(:id=> picture) %></td>
      <td><%= link_to 'Edit', edit_album_picture_path(:id=> picture) %></td>
      <td><%= link_to 'Destroy', album_picture_path(:id=> picture),method: :delete,data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', albums_path %>
<%= link_to 'New', new_album_picture_path %> 