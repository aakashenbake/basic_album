<h1>Listing albums</h1>
 <%= link_to 'Album creation', new_album_path %>
 <%= javascript_include_tag 'tabs', 'data-turbolinks-track' => true %>

<div class="tabs">
    <ul class="tab-links">
        <li class="active"><a href="#tab1">All Album</a></li>
        <li><a href="#tab2">Deleted Album</a></li>
    </ul>
 
    <div class="tab-content">
        <div id="tab1" class="tab active">
            <table border>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Owner</th>
                  <th>Show</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
               
                <% @albums.each do |album| %>
                  <tr>
                    <td><%= album.name %></td>
                    <td><%= album.description %></td>
                    <td><%=User.find(album.user_id).email%></td>
                    <td><%= link_to 'Show', album_path(album) %></td>
                    <td><%= link_to 'Edit', edit_album_path(album) %></td>
                    <td><%= link_to 'Delete', album_path(album),method: :delete,data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  </tr>
                <% end %>
              </table>
        </div>
 
        <div id="tab2" class="tab">
            <table>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Owner</th>
                  <th>Restore</th>
                </tr>
               
                <% @albums_deleted.each do |album| %>
                  <tr>
                    <td><%= album.name %></td>
                    <td><%= album.description %></td>
                    <td><%=User.find(album.user_id).email%></td> 
                    <td><%= link_to 'Restore', restore_album_path(album),data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  </tr>
                <% end %>
              </table>
        </div>
    </div>
</div>

