	<div class="col-lg-12 ">
		<%if params[:action]=="edit"%>
			<div class="col-md-12">
				<%= f.submit :value=>"Delete Multipal",:class=>"btn btn-danger",:formaction=>destroy_multiple_pictures_path(params[:id])%>
				<div class ="row">
					<%= paginate @picture %>
						<% @picture.each do |pic|%>
							<%=render 'edit_picture',pic: pic,f: f%>
						<%end%>
					<%= paginate @picture %>
				</div>
			</div>
		<%else%>
			<div class="col-md-12">
				<div class="col-lg-12">
					<h1 class="page-header">
						Listing pictures
					</h1>
				</div>
				<div class="col-md-12">
					<%= paginate @picture %>
				</div>
				<div class ="row">
					<% @picture.each do |picture|%>
					    <div class="col-md-3 thumb ">
					        <%= link_to image_tag((picture.image.url(:med)) ,:size => "200"),album_picture_path(:id =>picture.id, :album_id => params[:id]),:class => "img-responsive thumbnail"%>
					        <div class="col-md-12">
					          <p class="col-md-6"><strong>Name</strong></p>
					          <p class="col-md-6"><%= picture.name %></p>   
					        </div>
					        <div class="col-md-12">
					          <p class="col-md-6"><strong>Descreption</strong></p>
					          <p class="col-md-6"><%= picture.description%></p>   
					        </div>
					        <div class="col-md-12">
					          <p class="col-md-6"><strong>Tags</strong></p>
					          <p class="col-md-6">
					          	<%Picture.find(picture.id).tags.each do |obj| %> 
					          		<%= link_to obj.name.to_s,tag_path(obj.id)%>
					          	<%end%>	
					          </p>   
					        </div>
					    </div>
				  	<%end%>
			   	</div>
			   	<div class="col-md-12">
					<%= paginate @picture %>
				</div>
			</div>
		<%end%>
	</div>