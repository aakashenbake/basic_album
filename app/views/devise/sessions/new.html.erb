<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="text-center">Login</h1>
        </div>
        <div class="modal-body">
        <%= form_for(resource, as: resource_name,:class => "form-horizontal",url: session_path(resource_name)) do |f| %>
            <form class="form col-md-12 center-block">
              <div class="form-group">
              <%= f.email_field :email, autofocus: true ,:class=>"form-control input-lg", :placeholder=>"Email",:required => "true"%>
              </div>
              <div class="form-group">
              <%= f.password_field :password,:class=>"form-control input-lg", :placeholder=>"Password", autocomplete: "off",:required => "true" %>
                </div>
              <div class="form-group">
              <%= f.submit "Sign In" ,:class=>"btn btn-primary btn-lg btn-block"%>
                <div class= "pull-right">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            <%end%>
          <br>
        </div>
        <div class="modal-footer">
          <div class="col-md-12">
            <% if alert %>
                <p class="alert alert-danger"><%= alert %></font></p>
            <% elsif notice %>
                <p class="alert alert-success"><%= notice %></p>
            <% else %>
                <p class="alert alert-info"> Kindly Log In First</p>
            <% end %>
          </div>
        </div>
    </div>
    </div>
  </div>